                    <input
                      type="text"
                      name="email"
                      placeholder="Your email *"
                      required="required"
                      class="form-control"
                    />
                  </div>
                  <div class="col-md-6">
                    <input
                      type="text"
                      name="phone"
                      placeholder="Your phone"
                      class="form-control"
                    />
                  </div>
