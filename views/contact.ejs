                    <textarea
                      name="message"
                      placeholder="Message for me *"
                      rows="4"
                      required="required"
                      class="form-control"
                    ></textarea>
                  </div>
                  <div class="col-md-12 text-center">
                    <button class="btn btn-outline-primary">
                      <a href="/" style="color: black"> Send message </a>
